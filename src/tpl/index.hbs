---
title: RWD and Performance Workshop
layout: doc
---

<div id="page">
	<header>
		<h1>{{ page.title }}</h1>
		<p class="lead"><a href="./doc/">Voir la documentation</a></p>
	</header>

	<table class="table-stripped">
		<caption>Conformité et affichage</caption>
		<thead>
			<tr>
				<th>Maquette</th>
				<th>PageSpeed Score</th>
				<th>Total Request Bytes</th>
				<th>Number Resources</th>
				<th>Number Static Resources</th>
				<th>DOM ReadyStateLoading</th>
				<th>DOM ReadyState Interactive</th>
				<th>WindowOnLoad</th>
				<th>Elapsed Load Time</th>
				<th>Total Resources Time</th>
				<th>Total Resources Size</th>
				<th>Slowest Resource</th>
				<th>Largest Resource</th>
			</tr>
		</thead>
		<tbody>
			{{#each pages}}
				{{#isnt data.layout "doc"}}
				<tr>
					<td><a href="{{ relative ../../page.dest dest }}">{{ data.title }}</a></td>
					{{#at ../../desktop.results index}}
					<td {{#lt score 80}}class="color-red"{{/lt}}>{{ score }}</td>
					<td>{{ pageStats.totalRequestBytes }}</td>
					<td>{{ pageStats.numberResources }}</td>
					<td>{{ pageStats.numberStaticResources }}</td>
					{{/at}}
					{{#at ../.. basename}}
					<td>{{ domReadystateLoading }}</td>
					<td>{{ domReadystateInteractive }}</td>
					<td>{{windowOnload}}</td>
					<td>{{elapsedLoadTime}}</td>
					<td>{{totalResourcesTime}}</td>
					<td>{{totalResourcesSize}}</td>
					<td><a href="{{slowestResource}}">view it</a></td>
					<td><a href="{{largestResource}}">view it</a></td>
					{{/at}}
				</tr>
				{{/isnt}}
			{{/each}}
		</tbody>
	</table>

	<footer>
		<p class="footnotes"><small>[1]: Hors erreurs de validation liées aux recommandations SEO.</small></p>
	</footer>
</div>
